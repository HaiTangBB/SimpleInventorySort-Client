{
	"schemaVersion": 1,
	"id": "test-inv",
	"version": "${version}",
	"name": "One-Click Container Sorting",
	"description": "A pure client-side inventory sorting mod with advanced rules (Category, Tool Type, Material, Durability).",
	"authors": [
		"HaiTangBB"
	],
	"contact": {
		"homepage": "https://github.com/HaiTangBB/SimpleInventorySort-Client",
		"sources": "https://github.com/HaiTangBB/SimpleInventorySort-Client"
	},
	"license": "CC0-1.0",
	"icon": "assets/test-inv/icon.png",
	"environment": "client",
	"entrypoints": {
		"main": [
			"name.modid.SortInventoryMain"
		],
		"client": [
			"name.modid.SortInventoryClient"
		]
	},
	"mixins": [
		"test-inv.mixins.json",
		{
			"config": "test-inv.client.mixins.json",
			"environment": "client"
		}
	],
	"depends": {
		"fabricloader": ">=0.18.1",
		"minecraft": "~1.21.11-",
		"java": ">=21",
		"fabric-api": "*"
	},
	"suggests": {
		"another-mod": "*"
	}
}